<Window x:Class="Presentation.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.WPF"
        mc:Ignorable="d"
        Title="Contact List App"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White"
        Height="600" Width="400">
    
    
    <Grid>
        <Border Background="#333" Height="40" VerticalAlignment="Top" MouseDown="TopBar_MouseDown">
            <Grid>
                <Label Content="Contact List" Foreground="White" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0 0 0" />
                <Button Content="X" Background="Red" Foreground="White" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" Click="CloseButton_Click" Margin="0 0 10 0"/>
            </Grid>
        </Border>

    </Grid>
</Window>
